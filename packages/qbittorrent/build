#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

  wget http://geolite.maxmind.com/download/geoip/database/GeoLiteCountry/GeoIP.dat.gz
  gzip -c -d GeoIP.dat.gz > src/geoip/GeoIP.dat

  ./configure --prefix=/usr/local \
      --with-geoip-database-embedded || return 1

}

# Compile
build_compile() {

  make || return 1

}

# Install
build_install() {

  make INSTALL_ROOT="$INSTALL_ROOT" install || return 1

  mv "$INSTALL_ROOT/usr/local/share/applications/qBittorrent.desktop" "$INSTALL_ROOT/usr/local/share/applications/qbittorrent.desktop"

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_test
  tet_package

}

#
# tc-ext-tools build functions: configure, compile, install, rules
#

XUL_DIR=/usr/local/lib/xulrunner-${VERSION}
XUL_DEVEL_DIR=/usr/local/lib/xulrunner-devel-${VERSION}
XUL_INCLUDE_DIR=/usr/local/include/xulrunner-${VERSION}

export CXXFLAGS="$CXXFLAGS -fpermissive"
export LDFLAGS="-Wl,-rpath,${XUL_DIR} -Wl,-O1,--sort-common,--hash-style=gnu,--as-needed"

### Configure
build_configure() {

  busybox cp -f "$PACKAGE_SRC"/mozconfig .mozconfig || return 1

}
##

### Compile
build_compile() {

  make -f client.mk build || return 1

}
##

### Install
build_install() {

  make -f client.mk DESTDIR="$INSTALL_ROOT" install || return 1

  rm -rf "${INSTALL_ROOT}/usr/local/lib/xulrunner-${VERSION}/dictionaries" || return 1
  ln -sf /usr/local/share/myspell "${INSTALL_ROOT}/usr/local/lib/xulrunner-${VERSION}/dictionaries" || return 1

  ln -sf $XUL_DEVEL_DIR/lib/libxul.so $INSTALL_ROOT/usr/local/lib || return 1
  ln -sf $XUL_DEVEL_DIR/lib/libxpcom.so $INSTALL_ROOT/usr/local/lib || return 1
  ln -sf $XUL_DEVEL_DIR/lib/libmozjs.so $INSTALL_ROOT/usr/local/lib || return 1

  rm -rf $INSTALL_ROOT/$XUL_DIR/plugins $INSTALL_ROOT/$XUL_DIR/extensions
  install -m 755 -d $INSTALL_ROOT/usr/local/lib/xulrunner-addons/plugins || return 1
  ln -sf /usr/local/lib/xulrunner-addons/plugins $INSTALL_ROOT/$XUL_DIR/ || return 1
  install -m 755 -d $INSTALL_ROOT/usr/local/lib/xulrunner-addons/extensions || return 1
  ln -sf /usr/local/lib/xulrunner-addons/extensions $INSTALL_ROOT/$XUL_DIR/ || return 1

  install -m 755 -d $INSTALL_ROOT/usr/local/etc/ld.so.conf.d || return 1
  echo "$XUL_DIR" >> $INSTALL_ROOT/usr/local/etc/ld.so.conf.d/xulrunner.conf || return 1

}
##

### Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_test
  tet_package
  tet_encrypt

}
##

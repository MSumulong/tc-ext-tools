
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################


## compile
build_compile() {

   cp makefile.linux_x86_asm_gcc_4.X makefile.machine
   make all3 OPTFLAGS="${CXXFLAGS}" || return 1

}

## install
build_install() {

   make DEST_DIR="$I_ROOT" \
        DEST_HOME="/usr/local" \
        DEST_MAN="/usr/local/share/man" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


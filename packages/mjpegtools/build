#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   ./configure --prefix=/usr/local --enable-largefile || return 1

}

# Compile
build_compile() {

   make || return 1

}

# Install
build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   install -m644 mpeg2enc/mpeg2syntaxcodes.h "${INSTALL_ROOT}/usr/local/include/mjpegtools/mpeg2enc/" || return 1

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

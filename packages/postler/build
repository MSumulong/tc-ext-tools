
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   ./waf configure --prefix=/usr/local \
       --disable-libindicate || return 1

}

## compile
build_compile() {

   ./waf build || return 1

}

## install
build_install() {

   ./waf install --destdir="$I_ROOT" || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


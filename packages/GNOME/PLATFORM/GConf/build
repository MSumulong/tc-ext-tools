#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

   ./configure --prefix=/usr/local --localstatedir=/var \
         --with-gtk=2.0 --disable-debug || return 1

}

build_compile() {

   make || return 1

}

build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   sed -e 's/xml:readonly:\/etc\/gconf\/gconf.xml.system/xml:readonly:\/usr\/local\/etc\/gconf\/gconf.xml.system/g' -i "$INSTALL_ROOT/usr/local/etc/gconf/2/path" || return 1

   install -Dm755 "$PACKAGE_SRC/update-gconf-database.sh" "$INSTALL_ROOT/usr/local/sbin/update-gconf-database"

}

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}

#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

   libtoolize --force || return 1
   gtkdocize || return 1
   aclocal || return 1
   autoconf || return 1
   automake || return 1

   ./configure --prefix=/usr/local --localstatedir=/var --disable-static \
        --enable-samba --enable-hal --enable-avahi --disable-howl \
        --disable-openssl --enable-gnutls || return 1

}

build_compile() {

   make || return 1

}

build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

}

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


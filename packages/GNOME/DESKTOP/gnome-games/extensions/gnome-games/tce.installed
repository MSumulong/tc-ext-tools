#!/bin/sh

[ -x "$(which gtk-update-icon-cache)" ] && gtk-update-icon-cache -q -f -t /usr/local/share/icons/hicolor > /dev/null 2>&1
[ -x "$(which update-desktop-database)" ] && update-desktop-database -q > /dev/null 2>&1

if [ -d /tmp/tcloop/gnome-games ]; then
     cd /tmp/tcloop/gnome-games
     SCORES=$(find var -not -type d)
     cd /
     for i in $SCORES
     do
         [ -L "$i" ] && cp -a "/tmp/tcloop/gnome-games/$i" "$i"
     done
fi


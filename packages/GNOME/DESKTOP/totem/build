#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  ./configure --prefix=/usr/local --localstatedir=/var --disable-static \
              --enable-python --enable-nautilus --with-dbus \
              --disable-scrollkeeper || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  sudo make DESTDIR=${INSTALL_ROOT} install || return 1

}
##

### Rules
build_rules() {

  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_load
  tet_configure
  tet_compile
  tet_install
  tet_split
   tet_strip
  tet_create
  tet_generate
  tet_check
   tet_test
  tet_package
   tet_encrypt

}
##

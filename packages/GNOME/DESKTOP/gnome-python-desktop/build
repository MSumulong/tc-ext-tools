#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

   ./waf configure --prefix=/usr/local \
          --enable-metacity || return 1

}

build_compile() {

   ./waf build || return 1

}

build_install() {

   ./waf install --destdir="$INSTALL_ROOT" || return 1

}

build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
   tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}

#!/bin/sh

tcuser=`cat /etc/sysconfig/tcuser`
file="/home/${tcuser}/.gtkrc-2.0"

if [ ! -e "$file" ]; then

cat > $file << "EOF"
gtk-icon-theme-name = "gnome"
EOF

elif ! grep -q icon-theme $file; then

cat >> $file << "EOF"
gtk-icon-theme-name = "gnome"
EOF

fi

chown ${tcuser}.staff $file

gtk-update-icon-cache -q -f -t /usr/local/share/icons/gnome

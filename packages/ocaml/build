
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   ./configure -prefix /usr/local || return 1

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   make world.opt || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   make PREFIX="$INSTALL_ROOT/usr/local" MANDIR="$INSTALL_ROOT/usr/local/share/man" install install || return 1

   install -D -m 644 LICENSE "$INSTALL_ROOT/usr/local/share/licenses/ocaml/LICENSE"

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


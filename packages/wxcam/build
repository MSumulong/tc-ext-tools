#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

    # CImg is only required for building wxcam
    [ -e "$_P_SRC/CImg-1.3.4.zip" ] || wget http://downloads.sourceforge.net/cimg/CImg-1.3.4.zip -P "$_P_SRC"
    unzip "$_P_SRC/CImg-1.3.4.zip"
    cp CImg-1.3.4/CImg.h . || return 1

   ./configure --prefix=/usr/local || return 1

}

# Compile
build_compile() {

   make || return 1

}

# Install
build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   mv "$INSTALL_ROOT"/usr/share/* "$INSTALL_ROOT"/usr/local/share || return 1
   rm -rf "$INSTALL_ROOT/usr/local/doc"
}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

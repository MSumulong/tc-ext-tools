
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   return 0

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   . /etc/profile.d/sun-jdk.sh
   . /etc/profile.d/apache-ant.sh

   jar xf junit-${VERSION}-src.jar
   rm -f junit-${VERSION}-src.jar
   cp -f "${PACKAGE_SRC}/build.xml" .
   find . -name \*.class -delete
   find . -name \*.jar -delete

   ant dist || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   install -d "${INSTALL_ROOT}/usr/local/share/java" "${INSTALL_ROOT}/usr/local/lib"
   install -m644 junit4.4/junit.jar "${INSTALL_ROOT}/usr/local/share/java" || return 1

   # Do this for ant, though ant needs to have these files in /usr/local/share/java, but that will get fixed later.
   ln -sf ../share/java/junit.jar "${INSTALL_ROOT}/usr/local/lib/junit.jar" || return 1
   install -D -m644 cpl-v10.html "${INSTALL_ROOT}/usr/local/share/licenses/${PACKAGE}/LICENSE.html" || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


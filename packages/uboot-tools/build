
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## compile
build_compile() {

   rm -f include/config.mk
   make CONFIG_CMD_LOADS=y tools-all || return 1
   touch include/config.mk
   make -C tools/easylogo TOPDIR=$PWD SRCTREE=$PWD obj=$PWD/tools/easylogo/ || return 1
   make env || return 1

}

## install
build_install() {

   install -m 755 -d "$I_ROOT/usr/local/bin"
   install -m 755 -d "$I_ROOT/etc"

   cd tools
   install -m 755 bmp_logo gen_eth_addr img2srec mkimage easylogo/easylogo env/fw_printenv "$I_ROOT/usr/local/bin" || return 1
   ln -s fw_printenv "$I_ROOT/usr/local/bin/fw_setenv"
   install -m 644 env/fw_env.config "$I_ROOT/etc"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


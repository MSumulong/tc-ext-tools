
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make PREFIX=/usr/local DESTDIR="$I_ROOT" install || return 1

   install -Dm644 COPYING "${I_ROOT}/usr/local/share/licenses/${PACKAGE}/COPYING"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


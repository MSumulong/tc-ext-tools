#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   ./configure --prefix=/usr --enable-threads \
       --enable-xft --disable-static --enable-shared || return 1

}

# Compile
build_compile() {

   make || return 1

}

# Install
build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   rm -f $INSTALL_ROOT/usr/bin/fluid
   rm -rf $INSTALL_ROOT/usr/share

   tar -C $INSTALL_ROOT -czf /tmp/fltk-gl.tar.gz usr

   rm -rf $INSTALL_ROOT
   install -Dm644 /tmp/fltk-gl.tar.gz $INSTALL_ROOT/usr/local/share/fltk-gl/fltk-gl.tar.gz

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}

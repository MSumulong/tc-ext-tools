#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   ./configure --prefix=/usr/local --enable-release \
       --enable-shared --enable-double-precision || return 1

}

# Compile
build_compile() {

   make || return 1

}

# Install
build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   install -Dm0644 ou/LICENSE-BSD.TXT $INSTALL_ROOT/usr/local/share/licenses/ode/LICENSE-BSD.TXT

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

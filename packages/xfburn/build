
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

build_configure() {

   ./configure --prefix=/usr/local \
       --enable-gstreamer --disable-thunar-vfs \
       --enable-dbus --enable-hal || return 1

}

build_compile() {

   make || return 1

}

build_install() {

   make DESTDIR="$I_ROOT" install || return 1

}

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


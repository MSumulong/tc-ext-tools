
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   ./configure --prefix=/usr/local --sysconfdir=/etc --localstatedir=/var || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

   install -Dm755 "$P_SRC/drizzle-server.sh" "$I_ROOT/usr/local/etc/init.d/drizzle-server" || return 1

   install -dm755 "$I_ROOT/usr/local/share/drizzle"
   install -m644 COPYING COPYING.BSD README "$I_ROOT/usr/local/share/drizzle"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


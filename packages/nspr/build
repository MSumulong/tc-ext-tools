#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

  cd mozilla/nsprpub
  ./configure --prefix=/usr/local \
     --with-mozilla --with-pthreads \
     --enable-optimize --disable-debug || return 1

}

# Compile
build_compile() {

  cd mozilla/nsprpub
  make || return 1

}

# Install
build_install() {

  cd mozilla/nsprpub
  make DESTDIR="$INSTALL_ROOT" install || return 1

  rm -rf "${INSTALL_ROOT}/usr/local/bin/compile-et.pl" \
         "${INSTALL_ROOT}/usr/local/bin/prerr.properties" \
         "${INSTALL_ROOT}/usr/local/share/aclocal/nspr.m4" \
         "${INSTALL_ROOT}/usr/local/include/nspr/md"

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
   tet_test
  tet_package
   tet_encrypt

}


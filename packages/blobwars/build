
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## compile
build_compile() {

   RELEASE=1 make 

}

## install
build_install() {

   make PREFIX=${I_ROOT}/usr BINDIR=${I_ROOT}/usr/bin/ install
   chmod a+r ${I_ROOT}/usr/share/applications/blobwars.desktop
   chmod a+r -R ${I_ROOT}/usr/share/icons/hicolor/
   mkdir -p ${I_ROOT}/usr/local/share/
   mv ${I_ROOT}/usr/share/applications ${I_ROOT}/usr/local/share
   mv ${I_ROOT}/usr/share/icons ${I_ROOT}/usr/local/share
   install -dm755 ${I_ROOT}/usr/local/share/pixmaps
   install -m644 icons/blobwars.png ${I_ROOT}/usr/local/share/pixmaps

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


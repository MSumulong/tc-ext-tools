#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  ./autogen.sh || return 1
  ./configure --prefix=/usr/local --disable-static || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  make DESTDIR="$INSTALL_ROOT" install || return 1

  # preserve old libs
  cp -L /usr/local/lib/libprotobuf-lite.so.6.0.0 \
        /usr/local/lib/libprotobuf.so.6.0.0 \
        /usr/local/lib/libprotoc.so.6.0.0 "$I_ROOT"/usr/local/lib || return 1
  ln -s libprotobuf-lite.so.6.0.0 "$I_ROOT"/usr/local/lib/libprotobuf-lite.so.6 || return 1
  ln -s libprotobuf.so.6.0.0 "$I_ROOT"/usr/local/lib/libprotobuf.so.6 || return 1
  ln -s libprotoc.so.6.0.0 "$I_ROOT"/usr/local/lib/libprotoc.so.6 || return 1

  cd python
  python setup.py install --prefix=/usr/local --root="$INSTALL_ROOT" || return 1

}
##

### Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_test
  tet_package
  tet_encrypt

}
##

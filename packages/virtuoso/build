
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   ./configure --prefix=/usr/local --localstatedir=/var \
	--disable-rendezvous --disable-hslookup --disable-all-vads || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   cd binsrc/virtuoso
   make DESTDIR="$I_ROOT" install || return 1
   cd ../driver
   make DESTDIR="$I_ROOT" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}



############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   python setup.py build || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   sed -i "s|/usr/share/icons/hicolor/scalable/apps/cherrytree.svg|cherrytree|" linux/cherrytree.desktop || return 1
   python setup.py install --prefix=/usr/local --root="$INSTALL_ROOT" || return 1

   install -d -m 755 "$INSTALL_ROOT/usr/local/share/pixmaps"
   convert -background None "$INSTALL_ROOT/usr/local/share/icons/hicolor/scalable/apps/cherrytree.svg" \
        -compress none -depth 16 "$INSTALL_ROOT/usr/local/share/pixmaps/cherrytree.png"

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


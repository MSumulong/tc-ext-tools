
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   qmake PREFIX=/usr/local \
     INCLUDEPATH="/usr/local/include/phonon /usr/local/include/taglib" || return 1

}

## compile
build_compile() {

   sed -i 's/minitunes/musique/g' musique.desktop
   sed -i '1i #include <unistd.h>' src/qtsingleapplication/qtlocalpeer.cpp 
   make || return 1

}

## install
build_install() {

   make INSTALL_ROOT="$I_ROOT" install || return 1
   install -Dm644 data/128x128/musique.png ${I_ROOT}/usr/local/share/pixmaps/musique.png

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


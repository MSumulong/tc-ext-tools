#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

  scons prefix=/usr/local \
    systemd=yes \
    dbus_export=yes \
    libQgpsmm=no || return 1

}

# Compile
build_compile() {

  scons build || return 1

}

# Install
build_install() {

  export DESTDIR="$INSTALL_ROOT"
  scons install || return 1

  install -d -m 755 "$INSTALL_ROOT/usr/local/etc/init.d"
  install -m 755 "$PACKAGE_SRC/gpsd.sh" "$INSTALL_ROOT/usr/local/etc/init.d/gpsd"
  install -m 644 "$PACKAGE_SRC/gpsd.rc" "$INSTALL_ROOT/usr/local/etc/gpsd.rc"

  install -D -m644 "gpsd.rules" "$INSTALL_ROOT/lib/udev/rules.d/99-gpsd-usb.rules"
  install -D -m755 "gpsd.hotplug" "$INSTALL_ROOT/lib/udev/gpsd.hotplug"

  sed -i 's|/etc/default/gpsd|/usr/local/etc/gpsd.rc|' gpsd.hotplug

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}

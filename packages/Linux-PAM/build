#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

   ./configure DESTDIR=$INSTALL_ROOT --prefix=/usr/local \
       --includedir=/usr/local/include/security --localstatedir=/var || return 1

}

build_compile() {

   make || return 1

}

build_install() {

   make DESTDIR=$INSTALL_ROOT install || return 1

   install -D -m 644 "$PACKAGE_SRC"/other "$INSTALL_ROOT"/usr/local/etc/pam.d/other || return 1
   install -D -m 644 "$PACKAGE_SRC"/system-auth "$INSTALL_ROOT"/usr/local/etc/pam.d/system-auth || return 1

   chmod 4755 "$INSTALL_ROOT"/usr/local/sbin/unix_chkpwd || return 1
   chmod 4755 "$INSTALL_ROOT"/usr/local/sbin/pam_timestamp_check || return 1

}

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


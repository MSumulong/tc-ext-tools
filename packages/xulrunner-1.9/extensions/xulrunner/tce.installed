#!/bin/sh

XUL_DIR=`cat /usr/local/etc/ld.so.conf.d/xulrunner.conf`
if ! grep $XUL_DIR /etc/ld.so.conf >/dev/null; then
  echo $XUL_DIR >> /etc/ld.so.conf
fi

ln -sf /usr/local/lib/mozilla/plugins/libflashplayer.so /usr/local/lib/xulrunner-addons/plugins/libflashplayer.so > /dev/null 2>&1
mkdir -p /usr/local/lib/xulrunner-addons/extensions



############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   ./configure --prefix=/usr/local || return 1

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   make || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   mv -f "$INSTALL_ROOT/usr/local/bin/crx" "$INSTALL_ROOT/usr/local/bin/alienarena" || return 1
   mv -f "$INSTALL_ROOT/usr/local/bin/crx-ded" "$INSTALL_ROOT/usr/local/bin/alienarena-ded" || return 1
   install -D -m 644 "$PACKAGE_SRC/alienarena.desktop" "$INSTALL_ROOT/usr/local/share/applications/alienarena.desktop" || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

  ./configure --prefix=/usr/local \
     --with-libxml --with-openssl --with-perl --with-ldap \
     --with-tcl --with-libxslt --with-krb5 --with-gssapi \
     --with-python --with-pam --enable-nls \
     --with-system-tzdata=/usr/local/share/zoneinfo \
     --enable-thread-safety || return 1

}

# Compile
build_compile() {

  make || return 1

  make -C contrib || return 1

}

# Install
build_install() {

  make DESTDIR=$INSTALL_ROOT install || return 1

  make -C doc DESTDIR=$INSTALL_ROOT install || return 1

  make -C contrib DESTDIR=$INSTALL_ROOT install || return 1

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}

#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  cd source
  ./configure --prefix=/usr/local || return 1

}
##

### Compile
build_compile() {
  
  cd source
  make || return 1

}
##

### Install
build_install() {

  cd source
  make DESTDIR="$INSTALL_ROOT" install || return 1

}
##

### Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_test
  tet_package
  tet_encrypt

}
##

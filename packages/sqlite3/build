#
# tc-ext-tools build functions: configure, compile, install, rules
#

export LTLINK_EXTRAS="-ldl"
export CFLAGS="$CFLAGS -DSQLITE_ENABLE_FTS3=1 -DSQLITE_ENABLE_COLUMN_METADATA=1 -DSQLITE_ENABLE_UNLOCK_NOTIFY -DSQLITE_SECURE_DELETE"

build_configure() {

  ./configure --prefix=/usr/local || return 1

}

build_compile() {

  make || return 1

}

build_install() {

  make DESTDIR="$INSTALL_ROOT" install || return 1

}

build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_test
  tet_package
  tet_encrypt

}


############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

[ -e /etc/profile.d/sun-jdk.sh ] && . /etc/profile.d/sun-jdk.sh

## configure
build_configure() {

   sed -i '1i\
	  #include <list>' rts/lib/lobby/Connection.h

   mkdir build
   cd build
   cmake -DCMAKE_INSTALL_PREFIX=/usr/local -DCMAKE_BUILD_TYPE=Release \
         -DDATADIR=share/spring .. || return 1

}

## compile
build_compile() {

   cd build
   make || return 1

}

## install
build_install() {

   cd build
   make DESTDIR="$I_ROOT" install || return 1

   install -d $I_ROOT/etc/spring
   echo '$HOME/.spring' > $I_ROOT/etc/spring/datadir

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


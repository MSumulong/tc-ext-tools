#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr/local -DCMAKE_BUILD_TYPE=Release .. || return 1

}

build_compile() {

  cd build
  make || return 1

}

build_install() {

  cd build
  make DESTDIR="$INSTALL_ROOT" install || return 1

}

build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
   tet_test
  tet_package
   tet_encrypt

}

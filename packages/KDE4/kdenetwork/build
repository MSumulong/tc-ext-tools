#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

   #sed -i "/filesharing/d" CMakeLists.txt

   mkdir build
   cd build
   cmake -DCMAKE_INSTALL_PREFIX=/usr/local -DCMAKE_BUILD_TYPE=Release \
                -DMOZPLUGIN_INSTALL_DIR=/usr/local/lib/mozilla/plugins/ \
                -DWITH_Xmms=OFF \
                -DWITH_Decibel=OFF \
                -DWITH_LibMeanwhile=OFF .. || return 1

}

build_compile() {

   cd build
   make || return 1

}

build_install() {

   cd build
   make DESTDIR="$INSTALL_ROOT" install

}

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}

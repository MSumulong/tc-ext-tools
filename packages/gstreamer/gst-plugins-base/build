#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

  ./configure --prefix=/usr/local --localstatedir=/var \
      --enable-iso-codes --enable-experimental \
      --disable-examples --disable-static --disable-introspection \
	--disable-ivorbis \
      --with-package-name="GStreamer Base Plugins (Tiny Core Linux)" \
      --with-package-origin="https://code.google.com/p/tc-ext-tools/source/browse/packages/gstreamer" || return 1
}

# Compile
build_compile() {

#  ln -s /usr/lib/libX11.la /usr/local/lib/libX11.la
  make || return 1

}

# Install
build_install() {

  make DESTDIR="$INSTALL_ROOT" install || return 1

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
   tet_test
  tet_package
   tet_encrypt

}


############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   ## autotools
   ./configure --prefix=/usr/local \
		--disable-examples \
		--disable-tests \
		--enable-introspection=no \
		--disable-valgrind \
		--disable-debug \
		--disable-gst-debug \
		--with-package-name="GStreamer build for Tiny Core Linux" \
		--with-package-origin="https://code.google.com/p/tc-ext-tools/source/browse/packages/gstreamer" \
		--disable-static || return 1 
#		--disable-failing-tests \
#		--disable-benchmarks \
		#--disable-registry \
}

## compile
build_compile() {

   ## cmake
   #cd build
   make || return 1
}

## install
build_install() {
   make DESTDIR="$I_ROOT" install || return 1
   }

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}



############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   return 0

}

## compile
build_compile() {

   sed -i -e 's/^CXXFLAGS/#CXXFLAGS/' GNUmakefile || return 1
   make libcryptopp.a || return 1
   make libcryptopp.so || return 1

}

## install
build_install() {

   mkdir -p $I_ROOT/usr/local/include/cryptopp $I_ROOT/usr/local/lib $I_ROOT/usr/local/share/doc/cryptopp || return 1

   cp *.h $I_ROOT/usr/local/include/cryptopp || return 1
   cp *.a $I_ROOT/usr/local/lib || return 1
   cp *.so $I_ROOT/usr/local/lib || return 1
   cp *.txt $I_ROOT/usr/local/share/doc/cryptopp || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   ##tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


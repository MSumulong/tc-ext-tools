#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Compile
build_compile() {

  export BUILD_OPT=1
  export NSS_USE_SYSTEM_SQLITE=1
  export NSPR_INCLUDE_DIR=/usr/local/include/nspr
  export USE_SYSTEM_ZLIB=1
  export ZLIB_LIBS=-lz

  make PREFIX=/usr/local -C mozilla/security/nss nss_build_all || return 1

}

# Install
build_install() {

  export NSS_LINUXDIR=$(basename `ls -d $PWD/mozilla/dist/Linux*`)
  cd mozilla/dist

  install -v -m755 -d $INSTALL_ROOT/usr/local/bin || return 1
  install -v -m755 -d $INSTALL_ROOT/usr/local/lib/pkgconfig || return 1
  install -v -m755 -d $INSTALL_ROOT/usr/local/include/nss || return 1

  install -v -m755 $NSS_LINUXDIR/lib/*.so $INSTALL_ROOT/usr/local/lib || return 1
  install -v -m644 $NSS_LINUXDIR/lib/libcrmf.a $INSTALL_ROOT/usr/local/lib || return 1
  install -v -m644 $NSS_LINUXDIR/lib/*.chk $INSTALL_ROOT/usr/local/lib || return 1
  install -v -m755 $NSS_LINUXDIR/bin/nss-config $INSTALL_ROOT/usr/local/bin || return 1
  install -v -m644 $NSS_LINUXDIR/lib/pkgconfig/nss.pc $INSTALL_ROOT/usr/local/lib/pkgconfig || return 1
  cp -v -RL private/nss/* $INSTALL_ROOT/usr/local/include/nss || return 1
  cp -v -RL public/nss/* $INSTALL_ROOT/usr/local/include/nss || return 1
  chmod 644 $INSTALL_ROOT/usr/local/include/nss/*

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}

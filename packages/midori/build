#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  ./configure --prefix=/usr/local --enable-addons --disable-hildon --disable-tests \
      --enable-unique --enable-libnotify \
      --enable-nls --enable-docs --enable-apidocs || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  make DESTDIR="$INSTALL_ROOT" install || return 1

  #rm -f "$I_ROOT/usr/local/share/applications/midori-private.desktop"

}
##

### Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}
##

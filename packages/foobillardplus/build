
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   sed -i 's|/opt/foobillardplus/bin/||' foobillardplus.desktop
   sed -i 's|/opt/foobillardplus/||' foobillardplus.desktop
   aclocal --force
   autoconf -f
   autoheader -f
   automake -a -c -f
   ./configure --prefix=/usr/local || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="${I_ROOT}" datadir="${I_ROOT}/usr/local/foobillardplus/data" \
      prefix="${I_ROOT}/usr/local" install || return 1

   install -d "${I_ROOT}/usr/local/bin"
   install -Dm644 foobillardplus.desktop "${I_ROOT}/usr/local/share/applications/foobillardplus.desktop"
   install -Dm644 foobillardplus.png "${I_ROOT}/usr/local/share/pixmaps/foobillardplus.png"
   install -Dm644 foobillardplus.xbm "${I_ROOT}/usr/local/share/pixmaps/foobillardplus.xbm"
   ln -s "/usr/local/foobillardplus/bin/foobillardplus" "${I_ROOT}/usr/local/bin/foobillardplus"

   rm -f "${I_ROOT}"/usr/local/* || /bin/true

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


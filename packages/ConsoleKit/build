#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

   ./configure --prefix=/usr/local --localstatedir=/var \
               --enable-pam-module \
               --with-pam-module-dir=/usr/local/lib/security || return 1

}

build_compile() {

   make || return 1

}

build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   install -m 755 -d "$INSTALL_ROOT"/usr/local/lib/ConsoleKit/run-session.d
   install -m 755 "$PACKAGE_SRC"/pam-foreground-compat.ck "$INSTALL_ROOT"/usr/local/lib/ConsoleKit/run-session.d || return 1

   install -m 755 "$P_SRC"/start-desktop.sh "$I_ROOT"/usr/local/sbin/start-desktop 

}

build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_test
  tet_package
  tet_encrypt

}

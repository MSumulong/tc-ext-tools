
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   ./autogen.sh --prefix=/usr/local || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

   install -Dm644 data/multiget.desktop ${I_ROOT}/usr/local/share/applications/multiget.desktop
   install -Dm644 newicons/48/logo_48.xpm ${I_ROOT}/usr/local/share/pixmaps/multiget.xpm
   rm -rf "$I_ROOT/usr/local/doc"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


#
# tc-ext-tools build functions: configure, compile, install, rules
#

# workaround for an error
[ -e /usr/bin/gcc ] || sudo ln -sf /usr/local/bin/gcc /usr/bin/gcc

### Configure
build_configure() {

  ./configure --prefix=/usr/local --with-gtk=2.0 \
              --enable-video --enable-introspection \
              --with-font-backend=freetype --disable-gtk-doc \
              --enable-jit --with-unicode-backend=icu \
              --enable-spellcheck || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  make DESTDIR="$INSTALL_ROOT" install || return 1

  install -D -m 644 Source/WebKit/LICENSE "$INSTALL_ROOT/usr/local/share/licenses/$PACKAGE/LICENSE" || return 1
  install -m 755 Programs/GtkLauncher "$INSTALL_ROOT/usr/local/bin/GtkLauncher" || return 1

}
##

### Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}
##

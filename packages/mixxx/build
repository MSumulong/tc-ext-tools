
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################
build_compile() {
   scons qtdir=/usr/local  shoutcast=0 || return 1

}
build_install() {
   mkdir -p "$I_ROOT"/usr/local
   scons prefix="$I_ROOT/usr/local" qtdir=/usr/local install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}



############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   qmake PREFIX="/usr/local" \
     INCLUDEPATH="/usr/local/include/phonon" || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make INSTALL_ROOT="$I_ROOT" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Compile
build_compile() {

  make NOGDB=1 build || return 1

}
##

### Install
build_install() {

  make NOGDB=1 PREFIX=${INSTALL_ROOT}/usr/local install || return 1

  ln -sf /usr/local/lib/fpc/${VERSION}/ppc386 ${INSTALL_ROOT}/usr/local/bin/ || return 1

  mkdir -p ${INSTALL_ROOT}/etc
  ${INSTALL_ROOT}/usr/local/lib/fpc/${VERSION}/samplecfg /usr/local/lib/fpc/${VERSION} ${INSTALL_ROOT}/etc || return 1

  mv $INSTALL_ROOT/usr/local/man $INSTALL_ROOT/usr/local/share/ || return 1

  tar -C $I_ROOT/usr/local/lib/fpc -xvf $PACKAGE_SOURCE || return 1
  mv $I_ROOT/usr/local/lib/fpc/fpcbuild-${VERSION}/fpcsrc $I_ROOT/usr/local/lib/fpc/src
  rm -rf $I_ROOT/usr/local/lib/fpc/fpcbuild-${VERSION}

}
##

### Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_test
  tet_package
  tet_encrypt

}
##

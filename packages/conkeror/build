#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_compile() {

  make || return 1

}

build_install() {

  install -m 755 -d "$INSTALL_ROOT"/usr/local/bin
  install -m 755 -d "$INSTALL_ROOT"/usr/local/conkeror
  install -m 755 -d "$INSTALL_ROOT"/usr/local/share/man/man1
  install -m 755 -d "$INSTALL_ROOT"/usr/local/share/pixmaps
  install -m 755 -d "$INSTALL_ROOT"/usr/local/share/applications

  install -m 644 "$PACKAGE_SRC"/conkeror.png "$INSTALL_ROOT"/usr/local/share/pixmaps || return 1
  install -m 644 "$PACKAGE_SRC"/conkeror.desktop "$INSTALL_ROOT"/usr/local/share/applications || return 1
  install -m 755 "$PACKAGE_SRC"/conkeror.sh "$INSTALL_ROOT"/usr/local/bin/conkeror || return 1

  cp -a * "$INSTALL_ROOT/usr/local/conkeror" || return 1
  cp contrib/man/conkeror.1 "$INSTALL_ROOT"/usr/local/share/man/man1 || return 1
  rm -rf "$INSTALL_ROOT/usr/local/conkeror/contrib/man"
  rm -f "$INSTALL_ROOT"/usr/local/conkeror/*.c
  rm -f "$INSTALL_ROOT/usr/local/conkeror/Makefile"
  rm -f "$INSTALL_ROOT/usr/local/conkeror/INSTALL"
  rm -rf "$INSTALL_ROOT/usr/local/conkeror/debian"

  ln -s /usr/local/conkeror/conkeror-spawn-helper "$INSTALL_ROOT"/usr/local/bin/conkeror-spawn-helper || return 1
  ln -s /usr/local/lib/xulrunner-addons/plugins "$INSTALL_ROOT"/usr/local/conkeror/plugins || return 1
  ln -s /usr/local/lib/xulrunner-addons/extensions "$INSTALL_ROOT"/usr/local/conkeror/extensions || return 1

}

build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}

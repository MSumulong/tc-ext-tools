
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   ## autotools
      ./configure \
	--localstatedir=/var \
	--enable-client \
	--enable-datafiles \
	--disable-iospm \
	--disable-hh2serial-gps \
	--disable-openconnect \
	--enable-loopback=builtin \
	--enable-wifi=builtin \
	--enable-ethernet=builtin \
	--enable-test \
	|| return 1
#		--enable-bluetooth \
#		--enable-client \
#		--enable-tools \
#		--enable-hh2serial-gps \
#		--enable-ofono \
#		--enable-google \
#		--enable-client \
#		--enable-tools \
#		--enable-test
}

## compile
build_compile() {

   ## cmake
   make || return 1
}

## install
build_install() {

   ## cmake
   make DESTDIR="$I_ROOT" install || return 1
}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


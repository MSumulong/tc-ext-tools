
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   ## autotools
#   ./autogen.sh --enable-amalgamation \
   ./configure 	--disable-build-examples \
	--disable-doc \
	--disable-old-eet-file-format || return 1
#	--build=i686-pc-linux-gnu \
#	--host=i686-pc-linux-gnu 
}

## compile
build_compile() {

	sudo ln -s /usr/local/include/eina-1/Eina.h /usr/local/include/
	sudo ln -s /usr/local/include/eina-1/eina_config.h /usr/local/include/
	sudo ln -s /usr/local/include/eina-1/eina/eina_* /usr/local/include/
   ## cmake
   make || return 1
}

## install
build_install() {

   ## cmake
   make DESTDIR="$I_ROOT" install || return 1
}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


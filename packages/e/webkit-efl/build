## configure
build_configure() {

   ## autotools
#   ./autogen.sh --prefix=/usr/local || return 1
   chmod +x ./wscript
   ./wscript
#   ./Tools/Scripts/update-webkitefl-libs
#   ./Tools/Scripts/build-webkit --efl

}

## compile
build_compile() {

   ## cmake
   #cd build
   make || return 1
}

## install
build_install() {

   ## cmake
   #cd build
   make DESTDIR="$I_ROOT" install || return 1
}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}



############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {
   rm -rf exalt-client
#   rm -rf eektool
   rm -rf itask-ng
   rm -rf tiling
   rm -rf iiirk

   ## autotools
   ./autogen.sh --prefix=/usr/local || return 1
#   ./configure --prefix=/usr/local || return 1
}

## compile
build_compile() {

   rm -rf iiirk

   sudo ln -s /usr/lib/libblkid.la /usr/local/lib
   sudo ln -s /usr/lib/libuuid.la /usr/local/lib
#  make || return 1
   for i in *; do
	echo $i
	if [ -d $i ]; then
		cd $i
		make || return 1
		make DESTDIR=${PKGDIR}/tmp install || return 1
		cd ..
	fi
   done
}

## install
build_install() {

   #cd build
   for i in *; do
	echo $i
	if [ -d $i ]; then
		cd $i
   		make DESTDIR="$I_ROOT" install || return 1
		cd ..
	fi
   done
}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


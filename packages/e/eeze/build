
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

build_configure() {
   ./autogen.sh  || return 1
}
build_compile() {
   sudo ln -s /usr/lib/libblkid.la /usr/local/lib
   sudo ln -s /usr/lib/libuuid.la /usr/local/lib
   make || return 1
}
build_install() {
   make DESTDIR="$I_ROOT" install || return 1
#   install -D -m 644 $P_SRC/60-persistent-storage.rules \
#             $INSTALL_ROOT/etc/udev/rules.d/60-persistent-storage.rules || return 1

}
build_rules() {
   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
}


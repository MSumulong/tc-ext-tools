
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   ## autotools
#   ./configure \
   ./autogen.sh \
	--enable-ecore-fb \
	--enable-ecore-evas-fb  || return 1
#	--enable-ecore-sdl
#	--with-internal-maximum-log-level=2 
#	--disable-ecore-timer-dump \
#--disable-ecore-timer-dump \
}

## compile
build_compile() {

   ## cmake
   make || return 1
}

## install
build_install() {

   ## cmake
   make DESTDIR="$I_ROOT" install || return 1
}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
}


## configure
build_configure() {

   ## autotools
   ./configure --prefix=/usr/local || return 1
}

## compile
build_compile() {
#   edje_cc -id images/ -fd . darkness.edc -o darkness.edj
   ./build.sh
}

## install
build_install() {
   mkdir -p $I_ROOT/usr/local/share/enlightenment/data/themes/
   cp "$PACKAGE_SOURCE_TOPDIR"/darkness.edj $I_ROOT/usr/local/share/enlightenment/data/themes/
   chmod "u=rw","g=r","o=r" $I_ROOT/usr/local/share/enlightenment/data/themes/darkness.edj

   ## cmake
   #cd build
   #make DESTDIR="$I_ROOT" install || return 1
   #make INSTALL_ROOT="$I_ROOT" install || return 1

   ## python
   #python setup.py install --prefix=/usr/local --root="$I_ROOT" || return 1

   ## jam
   #DESTDIR="$I_ROOT" jam install || return 1

   ## waf
   #./waf install --destdir="$I_ROOT" || return 1

   ## scons
   #scons prefix="$I_ROOT/usr/local" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
#   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


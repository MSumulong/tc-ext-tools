
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################
build_configure() {
#   ./configure	\
   ./autogen.sh	--enable-fb --disable-fribidi  --disable-tslib || return 1
}
build_compile() {
   sudo ln -s /usr/lib/libblkid.la /usr/local/lib
   sudo ln -s /usr/lib/libuuid.la /usr/local/lib
   make || return 1
}
build_install() {
   sudo ln -s /usr/lib/libblkid.la /usr/local/lib
   sudo ln -s /usr/lib/libuuid.la /usr/local/lib
   make DESTDIR="$I_ROOT" install || return 1
}
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


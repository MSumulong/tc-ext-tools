
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################
build_compile() {
   sudo ln -s /usr/local/include/eio-1/Eio.h 			/usr/local/include/
   sudo ln -s /usr/local/include/eina-1/Eina.h  		/usr/local/include/
   sudo ln -s /usr/local/include/eina-1/eina_config.h   	/usr/local/include/
   sudo ln -s /usr/local/include/eina-1/eina/*   		/usr/local/include/
   sudo ln -s /usr/local/include/eet-1/Eet.h    		/usr/local/include/
   sudo ln -s /usr/local/include/eio-1/eio_inline_helper.x	/usr/local/include/
   make || return 1
}
build_install() {
   make DESTDIR="$I_ROOT" install || return 1
}
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


## configure
build_configure() {

#   ./configure	\
   ./autogen.sh	\
	--disable-install-examples \
	--enable-fb \
	--enable-evas-magic-debug \
	--disable-static-software-generic \
	--enable-image-loader-generic \
	--enable-cpu-altivec \
	--disable-harfbuzz \
	--disable-image-loader-edb \
	--disable-wayland-shm || return 1
#--enable-gl-xcb \
#--enable-software-xcb \
#	--enable-cpu-c \
#	--enable-image-loader-eet \
#	--enable-image-loader-jpeg \
#	--enable-image-loader-wbmp \
#	--enable-image-loader-ico \
#	--enable-image-loader-xpm \
#	--enable-image-loader-psd \
#	--enable-image-loader-pmaps \
#	--enable-image-loader-bmp \
#	--enable-image-loader-svg \

##	--enable-directfb \
#--enable-buffer=static \
#	--enable-static-software-generic \
}

## compile
build_compile() {

   ## cmake
   make || return 1
}

## install
build_install() {

   ## cmake
   make DESTDIR="$I_ROOT" install || return 1
}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


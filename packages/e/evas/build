
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

#   ./configure	\
   ./autogen.sh	\
	--enable-image-loader-eet \
	--enable-image-loader-jpeg \
	--enable-image-loader-wbmp \
	--enable-image-loader-ico \
	--enable-image-loader-xpm \
	--enable-image-loader-psd \
	--enable-image-loader-pmaps \
	--enable-image-loader-bmp \
	--disable-install-examples \
	--enable-fb \
	--disable-wayland-shm || return 1
#	--enable-directfb \
#--enable-buffer=static \
#	--enable-static-software-generic \
}

## compile
build_compile() {

   ## cmake
   make || return 1
}

## install
build_install() {

   ## cmake
   make DESTDIR="$I_ROOT" install || return 1
}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


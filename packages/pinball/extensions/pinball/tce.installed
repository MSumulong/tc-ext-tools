#!/bin/sh

if [ ! -d /var/games/pinball ]; then
       mkdir -p /var/games/pinball/professor
       mkdir -p /var/games/pinball/tux
       touch /var/games/pinball/professor/highscores
       touch /var/games/pinball/tux/highscores
       chown -R root.staff /var/games/pinball
       chmod -R 666 /var/games/pinball
fi

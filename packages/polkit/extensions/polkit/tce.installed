#!/bin/sh

SYSCONFDIR=/usr/local/etc/polkit-1
LOCALSTATEDIR=/var/lib/polkit-1

if [ ! -d $VARDIR ] ; then
	mkdir -p "$LOCALSTATEDIR/localauthority/10-vendor.d"
	mkdir -p "$LOCALSTATEDIR/localauthority/20-org.d"
	mkdir -p "$LOCALSTATEDIR/localauthority/30-site.d"
	mkdir -p "$LOCALSTATEDIR/localauthority/50-local.d"
	mkdir -p "$LOCALSTATEDIR/localauthority/90-mandatory.d"

	chmod 700 /var/lib/polkit-1
fi

if [ ! -d "$SYSCONFDIR/localauthority" ] ; then
	mkdir -p "$SYSCONFDIR/localauthority/10-vendor.d"
	mkdir -p "$SYSCONFDIR/localauthority/20-org.d"
	mkdir -p "$SYSCONFDIR/localauthority/30-site.d"
	mkdir -p "$SYSCONFDIR/localauthority/50-local.d"
	mkdir -p "$SYSCONFDIR/localauthority/90-mandatory.d"

	chmod 700 "$SYSCONFDIR/localauthority"
fi


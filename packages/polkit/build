#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

  ./configure --prefix=/usr/local --disable-static \
      --disable-introspection --disable-man-pages \
      --localstatedir=/var || return 1

}

# Compile
build_compile() {

  make || return 1

}

# Install
build_install() {

  make DESTDIR="$INSTALL_ROOT" install || return 1

  chmod 4755 "$INSTALL_ROOT/usr/local/bin/pkexec" || return 1
  chmod 4755 "$INSTALL_ROOT/usr/local/libexec/polkit-agent-helper-1" || return 1

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}


############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

build_download_demosaic() {
   busybox wget -P "$_PACKAGE_SRC" http://www.libraw.org/data/LibRaw-demosaic-pack-GPL$1-$VERSION.tar.gz
}
build_unpack_demosaic() {
   busybox tar xzvf "$_PACKAGE_SRC"/LibRaw-demosaic-pack-GPL$1-$VERSION.tar.gz -C "$PACKAGE_SOURCE_TOPDIR"
}
## configure
build_configure() {

   ## autotools
   ./configure --prefix=/usr/local || return 1

   ## cmake
   #mkdir build
   #cd build
   #cmake -DCMAKE_INSTALL_PREFIX=/usr/local -DCMAKE_BUILD_TYPE=Release .. || return 1

   ## python
   #python setup.py configure || return 1

   ## waf
   #./waf configure --prefix=/usr/local || return 1

   ## qmake
   #qmake PREFIX="/usr/local" || return 1

}

## compile
build_compile() {

   ## cmake
   #cd build
   make || return 1

   ## python
   #python setup.py build || return 1

   ## jam
   #jam || return 1

   ## waf
   #./waf build || return 1

   ## scons
   #scons || return 1

}

## install
build_install() {

   ## cmake
   #cd build
   make DESTDIR="$I_ROOT" install || return 1
   #make INSTALL_ROOT="$I_ROOT" install || return 1

   ## python
   #python setup.py install --prefix=/usr/local --root="$I_ROOT" || return 1

   ## jam
   #DESTDIR="$I_ROOT" jam install || return 1

   ## waf
   #./waf install --destdir="$I_ROOT" || return 1

   ## scons
   #scons prefix="$I_ROOT/usr/local" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download

   build_download_demosaic 2
   build_download_demosaic 3

   tet_convert
   tet_unpack

   tet_patch

   build_unpack_demosaic 2
   build_unpack_demosaic 3

   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


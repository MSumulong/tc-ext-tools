
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   ## autotools
   ./configure --prefix=/usr/local \
		--without-pulseaudio \
		--without-imagemagick \
		--disable-gnomevfs \
		--disable-vaapi || return 1
#	--disable-musepack 
}

## compile
build_compile() {
   sudo ln -s /usr/local/lib/libXext.la /usr/lib
   sudo ln -s /usr/local/lib/libSM.la /usr/lib
   make || return 1
}

## install
build_install() {
   make DESTDIR="$I_ROOT" install || return 1
   }

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


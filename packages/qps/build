#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   qmake || return 1

}

# Compile
build_compile() {

   make || return 1

}

# Install
build_install() {

   install -D -m 755 qps $INSTALL_ROOT/usr/local/bin/qps || return 1
   install -D -m 644 qps.1 $INSTALL_ROOT/usr/local/share/man/man1/qps.1 || return 1
   install -D -m 644 qps.desktop $INSTALL_ROOT/usr/local/share/applications/qps.desktop || return 1
   install -D -m 644 icon/icon.xpm $INSTALL_ROOT/usr/local/share/pixmaps/qps.xpm || return 1

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}

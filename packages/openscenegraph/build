
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   mkdir build
   cd build
   cmake -DCMAKE_INSTALL_PREFIX=/usr/local -DCMAKE_BUILD_TYPE=Release .. || return 1

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   cd build
   make || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   cd build
   make DESTDIR="$INSTALL_ROOT" install || return 1

   install -D -m644 ../LICENSE.txt "$INSTALL_ROOT/usr/local/share/licenses/$PACKAGE/LICENSE" || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


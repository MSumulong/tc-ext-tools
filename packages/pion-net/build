
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   # override configure bug (forces debug even when nobody asked for it)
   sed -i "s/ -ggdb//g" configure
   # override Makefile bug
   sed -i "/docs:/ s/doxygen-doc//" Makefile.in
   # fix compilation with new versions of gcc

   ./configure --prefix=/usr/local \
       --disable-doxygen-doc || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

   # install license
   install -D -m0755 COPYING "$I_ROOT/usr/local/share/licenses/pion-net/Boost"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


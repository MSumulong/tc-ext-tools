
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   perl Build.PL installdirs=vendor destdir="$INSTALL_ROOT" \
                --config man1ext=1p --config man3ext=3pm || return 1

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   perl Build || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   perl Build install || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


#
# tc-ext-tools build functions: configure, compile, install, rules
#

export QTDIR=/usr/local

# Configure
build_configure() {

  ./configure --prefix /usr/local --with-doxywizard || return 1

}

# Compile
build_compile() {

  make || return 1

}

# Install
build_install() {

  make INSTALL="$INSTALL_ROOT/usr/local" MAN1DIR=share/man/man1 install || return 1

  install -D -m644 "$PACKAGE_SRC/doxygen-gui.desktop" "$INSTALL_ROOT/usr/local/share/applications/doxygen-gui.desktop" || return 1 

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
   tet_test
  tet_package
   tet_encrypt

}

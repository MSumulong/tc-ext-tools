
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

_stagedir="${S_ROOT}/stagedir"

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   cd tools/build/v2/engine
   ./build.sh cc || return 1

   _bindir="bin.linuxx86"

   install -m755 -d "${_stagedir}"/usr/local/bin
   install -m755 "${_bindir}"/bjam "${_stagedir}"/usr/local/bin/bjam

   cd "$S_ROOT/tools"
   "${_stagedir}"/usr/local/bin/bjam --toolset=gcc || return 1

   install -m755 ${S_ROOT}/dist/bin/* ${_stagedir}/usr/local/bin

   cd "$S_ROOT"

   "${_stagedir}"/usr/local/bin/bjam \
      release debug-symbols=off threading=multi \
      runtime-link=shared link=shared,static \
      cflags=-fno-strict-aliasing \
      toolset=gcc \
      --prefix="${_stagedir}/usr/local" \
      -sTOOLS=gcc \
      --layout=system \
      install || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   cp -r ${_stagedir} ${I_ROOT} || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


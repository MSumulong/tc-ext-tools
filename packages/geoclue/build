
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   sed -i 's/libnm_glib/libnm-glib/g' configure.ac
   sed -i '/libsoup-gnome/s/$/ gthread-2.0/' configure.ac

   autoreconf -f -i

   ./configure --prefix=/usr/local || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


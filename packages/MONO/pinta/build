
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   ./configure --prefix=/usr/local || return 1

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   make || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   install -m 755 "$PACKAGE_SRC/pinta.sh" "$INSTALL_ROOT/usr/local/bin/pinta" || return 1
   install -Dm644 license-mit.txt "$INSTALL_ROOT/usr/local/share/doc/pinta/license-mit.txt" || return 1
   install -Dm644 license-pdn.txt "$INSTALL_ROOT/usr/local/share/doc/pinta/license-pdn.txt" || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


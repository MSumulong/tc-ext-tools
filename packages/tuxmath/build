
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   ./configure --prefix=/usr/local || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

   install -D -m644 tuxmath.desktop "$I_ROOT/usr/local/share/applications/tuxmath.desktop"
   install -D -m644 data/images/icons/icon.png "$I_ROOT/usr/local/share/pixmaps/tuxmath.png"

   install -D -m644 doc/OFL.txt "$I_ROOT/usr/local/share/licenses/tuxmath/OFL.txt"
   install -D -m644 doc/README_DATA_LICENSES.TXT "$I_ROOT/usr/local/share/licenses/tuxmath/README_DATA_LICENSES.txt"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}



############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

## configure
build_configure() {

   ./configure --prefix=/usr/local --localstatedir=/var || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" DOC_DIR="/usr/local/share/doc/openslp-${VERSION}" install || return 1

   install -D -m755 "$P_SRC/slpd.sh" "$I_ROOT/usr/local/etc/init.d/slpd"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


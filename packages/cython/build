
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

build_configure() {
   python setup.py configure || return 1
}
build_compile() {
   python setup.py install --prefix=/usr/local --root="$I_ROOT" || return 1
}
build_rules() {
   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
#   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
}


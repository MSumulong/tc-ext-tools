
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################


## install
build_install() {

   install -Dm755 "$P_SRC"/msttcorefonts-installer.sh "$I_ROOT"/usr/local/bin/msttcorefonts-installer || return 1

}

## rules
build_rules() {

   tet_load
   tet_install
   tet_split
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


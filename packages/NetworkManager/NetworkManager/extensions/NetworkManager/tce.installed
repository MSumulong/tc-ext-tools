#!/bin/sh

[ -d /usr/local/etc/NetworkManager/dispatcher.d ] || mkdir -p /usr/local/etc/NetworkManager/dispatcher.d
[ -d /usr/local/etc/NetworkManager/system-connections ] || mkdir -p /usr/local/etc/NetworkManager/system-connections
[ -d /var/run/NetworkManager ] || mkdir -p /var/run/NetworkManager
[ -d /var/lib/NetworkManager ] || mkdir -p /var/lib/NetworkManager

udevadm control --reload-rules >/dev/null 2>&1
udevadm trigger >/dev/null 2>&1



############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   ./configure --prefix=/usr/local \
        --disable-static || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

   rm $I_ROOT/usr/local/bin/dropbox
   rm $I_ROOT/usr/local/share/applications/dropbox.desktop
   rmdir $I_ROOT/usr/local/share/applications

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package
   tet_encrypt

}


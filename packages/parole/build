
############################################################################################
#                                                                                          #
#    package build functions: configure, compile, install, rules, and custom functions     #
#                                                                                          #
############################################################################################

#export LDFLAGS="$LDFLAGS -lX11"

## configure
build_configure() {

   ./configure --prefix=/usr/local || return 1

}

## compile
build_compile() {

   sudo ln -sf /usr/lib/libX11.la /usr/local/lib/libX11.la
   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_test
   tet_package

}


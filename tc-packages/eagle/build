
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                               Unpack                                     #
############################################################################

build_unpack() {

   sh "$PACKAGE_SOURCE" . || return 1

}

############################################################################ 
#                               Convert                                    #
############################################################################

build_convert() {

   sh "$PACKAGE_SOURCE" . || return 1

   tar -cJvf "$PACKAGE_SOURCE_CONVERTED" "$SOURCE_TOPDIR" || return 1

}

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   return 0

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   return 0

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   sh "$PACKAGE_SOURCE" "$INSTALL_ROOT/usr/local" || return 1
   mv "$INSTALL_ROOT/usr/local/eagle-${VERSION}" "$INSTALL_ROOT/usr/local/eagle" || return 1

   install -D -m 755 "$PACKAGE_SRC/eagle.sh" "$INSTALL_ROOT/usr/local/bin/eagle" || return 1

   install -D -m 644 "$PACKAGE_SRC/eagle.desktop" "$INSTALL_ROOT/usr/local/share/applications/eagle.desktop" || return 1
   install -D -m 644 "$INSTALL_ROOT/usr/local/eagle/bin/eagleicon50.png" "$INSTALL_ROOT/usr/local/share/pixmaps/eagle.png" || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   buildit load || exit 1
   buildit download || exit 1
   buildit convert || exit 1
   buildit unpack || exit 1
   buildit install || exit 1
   buildit split || exit 1
   buildit create || exit 1
   buildit generate || exit 1
   buildit check || exit 1
   buildit package || exit 1

}


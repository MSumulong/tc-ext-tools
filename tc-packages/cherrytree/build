
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   return 0

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   python setup.py build || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   python setup.py install --prefix=/usr/local --root="$INSTALL_ROOT" || return 1

   install -d -m 755 "$INSTALL_ROOT/usr/local/share/pixmaps"
   convert -background None "$INSTALL_ROOT/usr/local/share/icons/hicolor/scalable/apps/cherrytree.svg" \
        -compress none -depth 16 "$INSTALL_ROOT/usr/local/share/pixmaps/cherrytree.png"

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   buildit load || exit 1
   buildit download || exit 1
   buildit convert || exit 1
   buildit unpack || exit 1
   buildit patch || exit 1
   buildit configure || exit 1
   buildit compile || exit 1
   buildit install || exit 1
   buildit strip || exit 1
   buildit split || exit 1
   buildit create || exit 1
   buildit generate || exit 1
   buildit check || exit 1
   buildit package || exit 1
   buildit compress || exit 1

}


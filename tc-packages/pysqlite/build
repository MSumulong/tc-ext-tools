#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   cp -f $PACKAGE_SRC/setup.cfg . || return 1

}

# Compile
build_compile() {

   return 0

}

# Install
build_install() {

   python setup.py install --prefix=/usr/local --root="$INSTALL_ROOT" || return 1

   rm -rf $INSTALL_ROOT/usr/local/pysqlite2-doc

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

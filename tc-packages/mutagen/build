
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## install
build_install() {

   python setup.py install --prefix=/usr/local --root="$I_ROOT" || return 1

   install -d "${INSTALL_ROOT}/usr/local/bin"
   install -m755 tools/* "${INSTALL_ROOT}/usr/local/bin" || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


build_configure() {

   return 0

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   return 0

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   mkdir -p "$INSTALL_ROOT/usr/local/share/tomatoes"

   cp -R ./* "$INSTALL_ROOT/usr/local/share/tomatoes" || return 1
   cp -f "$PACKAGE_SRC/config.cfg" "$INSTALL_ROOT/usr/local/share/tomatoes" || return 1

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


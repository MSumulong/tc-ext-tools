#
# tc-ext-tools build functions: configure, compile, install, rules
#

XUL_DIR=/usr/local/lib/xulrunner-${VERSION}
XUL_DEVEL_DIR=/usr/local/lib/xulrunner-devel-${VERSION}
XUL_INCLUDE_DIR=/usr/local/include/xulrunner-${VERSION}

### Configure
build_configure() {

  busybox cp -f "$PACKAGE_SRC"/mozconfig .mozconfig || return 1

}
##

### Compile
build_compile() {

  make -f client.mk build || return 1

}
##

### Install
build_install() {

  make -f client.mk DESTDIR="$INSTALL_ROOT" install || return 1

  ln -sf $XUL_DEVEL_DIR/lib/libxul.so $INSTALL_ROOT/usr/local/lib || return 1
  ln -sf $XUL_DEVEL_DIR/lib/libxpcom.so $INSTALL_ROOT/usr/local/lib || return 1
  ln -sf $XUL_DEVEL_DIR/lib/libmozjs.so $INSTALL_ROOT/usr/local/lib || return 1

  install -m 755 -d $INSTALL_ROOT/usr/local/lib/xulrunner-addons || return 1
  mv $INSTALL_ROOT/$XUL_DIR/plugins $INSTALL_ROOT/usr/local/lib/xulrunner-addons || return 1
  ln -s /usr/local/lib/xulrunner-addons/plugins $INSTALL_ROOT/$XUL_DIR/plugins || return 1
  ln -s /usr/local/lib/xulrunner-addons/extensions $INSTALL_ROOT/$XUL_DIR/extensions || return 1

  install -m 755 -d $INSTALL_ROOT/etc/ld.so.conf.d || return 1
  echo "$XUL_DIR" >> $INSTALL_ROOT/etc/ld.so.conf.d/xulrunner.conf || return 1

}
##

### Rules
build_rules() {

  buildit load || exit 1
  buildit download || exit 1
  buildit convert || exit 1
  buildit unpack || exit 1
  buildit patch || exit 1
  buildit configure || exit 1
  buildit compile || exit 1
  buildit install || exit 1
  buildit strip || exit 1
  buildit split || exit 1
  buildit create || exit 1
  buildit generate || exit 1
  buildit check || exit 1
  buildit package || exit 1
  buildit compress || exit 1

}
##

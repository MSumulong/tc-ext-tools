
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   ./configure --prefix=/usr/local --localstatedir=/var || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   addgroup games

   make DESTDIR="$I_ROOT" install || return 1

   sed -i -e "/X-Ubuntu/d" tuxtype.desktop
   install -D -m 644 tuxtype.desktop "$I_ROOT/usr/local/share/applications/tuxtype.desktop"
   install -D -m 644 icon.png "$I_ROOT/usr/local/share/pixmaps/tuxtype.png"

}

## rules
build_rules() {

   buildit load || exit 1
   buildit download || exit 1
   buildit convert || exit 1
   buildit unpack || exit 1
   buildit patch || exit 1
   buildit configure || exit 1
   buildit compile || exit 1
   buildit install || exit 1
   buildit split || exit 1
   buildit strip || exit 1
   buildit create || exit 1
   buildit generate || exit 1
   buildit check || exit 1
   buildit package || exit 1

}


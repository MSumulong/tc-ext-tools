
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   return 0

}

## compile
build_compile() {

   scons PREFIX="/usr/local" DESTDIR="${I_ROOT}" USE_EXT_BOOST=1 || return 1

}

## install
build_install() {

   scons PREFIX="/usr/local" DESTDIR="${I_ROOT}" install || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


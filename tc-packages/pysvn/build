#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  python setup.py backport || return 1
  python setup.py configure --apr-inc-dir=/usr/local/include/apr-1 || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  sudo mkdir -p $INSTALL_ROOT/usr/local/lib/python2.7/site-packages/pysvn
  sudo install -D -m 755 pysvn/* $INSTALL_ROOT/usr/local/lib/python2.7/site-packages/pysvn || return 1
  sudo rm -f $INSTALL_ROOT/usr/local/lib/python2.7/site-packages/pysvn/*.template

}
##

### Rules
build_rules() {

  buildit download || exit 1
  buildit convert || exit 1
  buildit unpack || exit 1
  buildit patch || exit 1
  buildit load || exit 1
  buildit configure || exit 1
  buildit compile || exit 1
  buildit install || exit 1
  buildit strip || exit 1
  buildit split || exit 1
  buildit create || exit 1
  buildit generate || exit 1
  buildit check || exit 1
  buildit package || exit 1
  buildit compress || exit 1

}
##

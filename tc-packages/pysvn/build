#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  python setup.py backport || return 1
  python setup.py configure --apr-inc-dir=/usr/local/include/apr-1 || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  sudo mkdir -p $INSTALL_ROOT/usr/local/lib/python2.7/site-packages/pysvn
  sudo install -D -m 755 pysvn/* $INSTALL_ROOT/usr/local/lib/python2.7/site-packages/pysvn || return 1
  sudo rm -f $INSTALL_ROOT/usr/local/lib/python2.7/site-packages/pysvn/*.template

}
##

### Rules
build_rules() {

  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_load
  tet_configure
  tet_compile
  tet_install
  tet_split
   tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}
##

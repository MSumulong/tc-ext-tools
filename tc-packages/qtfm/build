
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   qmake || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   install -Dm 755 qtfm ${I_ROOT}/usr/local/bin/qtfm || return 1
   install -Dm 644 qtfm.desktop ${I_ROOT}/usr/local/share/applications/qtfm.desktop || return 1
   install -Dm 644 images/qtfm.png ${I_ROOT}/usr/local/share/pixmaps/qtfm.png || return 1

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

   gtkdocize || return 1
   autoreconf --force --install --symlink &&
   intltoolize --force &&
   autoreconf --force &&
   ./configure --prefix=/usr/local \
     --localstatedir=/var \
     --with-udev-dir=/etc/udev \
     --with-distro=tinycore \
     --with-kernel-firmware-dir=/usr/local/lib/firmware \
     --with-crypto=nss \
     --disable-gtk-doc \
     --disable-static \
     --with-iptables=/usr/local/sbin/iptables \
     --with-dhcpcd=/usr/local/sbin/dhcpcd \
     --with-system-ca-path=/usr/local/etc/ssl/certs \
     --with-pppd-plugin-dir=/usr/local/lib/pppd/2.4.4 \
     --enable-more-warnings=no || return 1

}

build_compile() {

   make || return 1

}

build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   install -m 755 -d "$INSTALL_ROOT"/usr/local/etc/default
   install -m 755 -d "$INSTALL_ROOT"/usr/local/etc/init.d
   install -m 755 -d "$INSTALL_ROOT"/usr/local/etc/NetworkManager

   install -m 644 "$PACKAGE_SRC"/NetworkManager.conf "$INSTALL_ROOT"/usr/local/etc/default/NetworkManager || return 1
   install -m 755 "$PACKAGE_SRC"/NetworkManager.sh "$INSTALL_ROOT"/usr/local/etc/init.d/NetworkManager || return 1
   install -m 644 "$PACKAGE_SRC"/nm-system-settings.conf "$INSTALL_ROOT"/usr/local/etc/NetworkManager/nm-system-settings.conf || return 1

}

build_rules() {

   buildit load || exit 1
   buildit download || exit 1
   buildit convert || exit 1
   buildit unpack || exit 1
   buildit patch || exit 1
   buildit configure || exit 1
   buildit compile || exit 1
   buildit install || exit 1
   buildit strip || exit 1
   buildit split || exit 1
   buildit create || exit 1
   buildit generate || exit 1
   buildit check || exit 1
   buildit package || exit 1
   buildit compress || exit 1

}

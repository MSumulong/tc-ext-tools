#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   return 0

}

# Compile
build_compile() {

   make || return 1

}

# Install
build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   make clean
   make -f Makefile.fip
   make -f Makefile.fip DESTDIR="$INSTALL_ROOT" install || return 1

   install -Dm644 license-fi.txt $INSTALL_ROOT/usr/local/share/licenses/freeimage/license-fi.txt || return 1

   mv $INSTALL_ROOT/usr/include $INSTALL_ROOT/usr/local   
   mv $INSTALL_ROOT/usr/lib $INSTALL_ROOT/usr/local

   cd $INSTALL_ROOT/usr/local/lib
   ln -s libfreeimage-${VERSION}.so libfreeimage.so || return 1
   ln -s libfreeimageplus-${VERSION}.so libfreeimageplus.so || return 1
   ln -s libfreeimage-${VERSION}.so libfreeimage.so.3 || return 1
   ln -s libfreeimageplus-${VERSION}.so libfreeimageplus.so.3 || return 1

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

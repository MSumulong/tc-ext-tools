#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   ./configure --prefix=/usr/local --localstatedir=/var \
      --enable-release --disable-appledevice --disable-ipod \
      --disable-static --disable-scrollkeeper \
      --with-vendor-build-id=TinyCoreLinux || return 1

}

# Compile
build_compile() {

   make || return 1

}

# Install
build_install() {

   make DESTDIR=$INSTALL_ROOT install || return 1

   ln -s banshee-1.desktop "$INSTALL_ROOT"/usr/local/share/applications/banshee.desktop || return 1

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

#
# tc-ext-tools build functions: configure, compile, install, rules
#

export PATH="$PACKAGE_SOURCE_TOPDIR/runtime/_tmpinst/bin:$PATH"

# Configure
build_configure() {

  ./configure --prefix=/usr/local \
              --with-libgdiplus=installed \
              --with-profile4=yes || return 1

}

# Compile
build_compile() {

  make || return 1

}

# Install
build_install() {

  make DESTDIR="$INSTALL_ROOT" install || return 1

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
   tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}

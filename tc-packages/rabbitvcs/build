#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  return 0

}
##

### Compile
build_compile() {

  return 0

}
##

### Install
build_install() {


  sudo python setup.py install --prefix=/usr/local --root=${INSTALL_ROOT} || return 1

  sudo install -d $INSTALL_ROOT/usr/local/bin
  sudo install -d $INSTALL_ROOT/usr/local/lib/gedit-2/plugins
  sudo install -d $INSTALL_ROOT/usr/local/lib/nautilus/extensions-2.0/python
  sudo install -d $INSTALL_ROOT/usr/local/lib/thunarx-1/python

  sudo mv $INSTALL_ROOT/usr/share $INSTALL_ROOT/usr/local

  sudo install -m 755 clients/cli/rabbitvcs $INSTALL_ROOT/usr/local/bin/rabbitvcs
  sudo install -m 644 clients/gedit/rabbitvcs-plugin.py $INSTALL_ROOT/usr/local/lib/gedit-2/plugins/rabbitvcs-plugin.py
  sudo install -m 644 clients/gedit/rabbitvcs.gedit-plugin $INSTALL_ROOT/usr/local/lib/gedit-2/plugins/rabbitvcs.gedit-plugin
  sudo install -m 644 clients/nautilus/RabbitVCS.py $INSTALL_ROOT/usr/local/lib/nautilus/extensions-2.0/python/RabbitVCS.py
  sudo install -m 644 clients/thunar/RabbitVCS.py $INSTALL_ROOT/usr/local/lib/thunarx-1/python/RabbitVCS.py

}
##

### Rules
build_rules() {

  buildit download || exit 1
  buildit convert || exit 1
  buildit unpack || exit 1
  buildit patch || exit 1
  buildit load || exit 1
  buildit configure || exit 1
  buildit compile || exit 1
  buildit install || exit 1
  buildit strip || exit 1
  buildit split || exit 1
  buildit create || exit 1
  buildit generate || exit 1
  buildit check || exit 1
  buildit package || exit 1
  buildit compress || exit 1
  buildit encrypt || exit 1

}

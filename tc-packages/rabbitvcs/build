#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Install
build_install() {

  python setup.py install --prefix=/usr/local --root="$INSTALL_ROOT" || return 1

  install -d "$INSTALL_ROOT/usr/local/bin"
  install -d "$INSTALL_ROOT/usr/local/lib/gedit-2/plugins"
  install -d "$INSTALL_ROOT/usr/local/lib/nautilus/extensions-2.0/python"
  install -d "$INSTALL_ROOT/usr/local/lib/thunarx-1/python"

  mv "$INSTALL_ROOT/usr/share" "$INSTALL_ROOT/usr/local"
 
  install -m 755 clients/cli/rabbitvcs "$INSTALL_ROOT/usr/local/bin/rabbitvcs" || return 1
  install -m 644 clients/gedit/rabbitvcs-plugin.py "$INSTALL_ROOT/usr/local/lib/gedit-2/plugins/rabbitvcs-plugin.py" || return 1
  install -m 644 clients/gedit/rabbitvcs.gedit-plugin "$INSTALL_ROOT/usr/local/lib/gedit-2/plugins/rabbitvcs.gedit-plugin" || return 1
  install -m 644 clients/nautilus/RabbitVCS.py "$INSTALL_ROOT/usr/local/lib/nautilus/extensions-2.0/python/RabbitVCS.py" || return 1
  install -m 644 clients/thunar/RabbitVCS.py "$INSTALL_ROOT/usr/local/lib/thunarx-1/python/RabbitVCS.py" || return 1

}
##

### Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_install
  tet_split
  tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}
##

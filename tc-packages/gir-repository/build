#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   # autotools
   ./configure --prefix=/usr/local || return 1
   #

   # cmake
   #[ -d build ] || mkdir build
   #cd build
   #cmake -DCMAKE_INSTALL_PREFIX=/usr/local -DCMAKE_BUILD_TYPE=Release .. || return 1
   #

   # python
   #python setup.py configure || return 1

}

# Compile
build_compile() {

   #cd build # cmake
   make || return 1
   #

   # jam
   #jam || return 1

   # python
   #python setup.py build || return 1

}

# Install
build_install() {

   # DESTDIR
   #cd build # cmake
   make DESTDIR="$INSTALL_ROOT" install || return 1
   #

   # INSTALL_ROOT
   #cd build # cmake
   #make INSTALL_ROOT="$INSTALL_ROOT" install || return 1
   #

   # jam
   #DESTDIR="$INSTALL_ROOT" jam install || return 1
   #

   # python install
   #python setup.py install --prefix=/usr/local --root="$INSTALL_ROOT" || return 1
   #

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## configure
build_configure() {

   ./configure --prefix=/usr/local || return 1

}

## compile
build_compile() {

   make || return 1

}

## install
build_install() {

   make DESTDIR="$I_ROOT" install || return 1

   install -Dm644 ct-ng.comp "$I_ROOT/usr/local/etc/bash_completion.d/ct-ng.sh"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


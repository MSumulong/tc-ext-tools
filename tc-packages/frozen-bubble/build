
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

export CFLAGS="$CFLAGS $(pkg-config glib-2.0 --cflags 2>/dev/null)"

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   return 0

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   make OPTIMIZE="${CFLAGS}" INSTALLDIRS=vendor PREFIX=/usr/local || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   make DESTDIR="$INSTALL_ROOT" PREFIX=/usr/local install || return 1

   find "$INSTALL_ROOT" -name '.packlist' -delete
   find "$INSTALL_ROOT" -name '*.pod' -delete

   install -D -m644 icons/frozen-bubble-icon-64x64.png "$INSTALL_ROOT/usr/local/share/pixmaps/frozen-bubble.png"
   install -D -m644 "$PACKAGE_SRC/frozen-bubble.desktop" "$INSTALL_ROOT/usr/local/share/applications/frozen-bubble.desktop"

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


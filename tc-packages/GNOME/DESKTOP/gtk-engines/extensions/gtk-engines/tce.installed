#!/bin/sh

tcuser=`cat /etc/sysconfig/tcuser`
file="/home/${tcuser}/.gtkrc-2.0"

if [ ! -e "$file" ]; then

cat > $file << "EOF"
include "/usr/local/share/themes/Clearlooks/gtk-2.0/gtkrc"
EOF

elif ! grep -q gtk-theme $file && ! grep -q include $file; then

cat >> $file << "EOF"
include "/usr/local/share/themes/Clearlooks/gtk-2.0/gtkrc"
EOF

fi

chown ${tcuser}.staff $file


############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

   ./configure --prefix=/usr/local --enable-mono || return 1

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   make || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   make DESTDIR="$INSTALL_ROOT" install || return 1

   mv "${I_ROOT}/usr/local/bin/uuencode" "${I_ROOT}/usr/local/bin/guuencode"
   mv "${I_ROOT}/usr/local/bin/uudecode" "${I_ROOT}/usr/local/bin/guudecode"

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


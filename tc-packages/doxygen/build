#
# tc-ext-tools build functions: configure, compile, install, rules
#

export QTDIR=/usr/local

# Configure
build_configure() {

  ./configure --prefix /usr/local --with-doxywizard || return 1

}

# Compile
build_compile() {

  make || return 1

}

# Install
build_install() {

  make INSTALL="$INSTALL_ROOT/usr/local" MAN1DIR=share/man/man1 install || return 1

  install -D -m644 "$PACKAGE_SRC/doxygen-gui.desktop" "$INSTALL_ROOT/usr/local/share/applications/doxygen-gui.desktop" || return 1 

}

# Rules
build_rules() {

  buildit load || exit 1
  buildit download || exit 1
  buildit convert || exit 1
  buildit unpack || exit 1
  buildit patch || exit 1
  buildit configure || exit 1
  buildit compile || exit 1
  buildit install || exit 1
  buildit strip || exit 1
  buildit split || exit 1
  buildit create || exit 1
  buildit generate || exit 1
  buildit check || exit 1
  buildit package || exit 1
  buildit compress || exit 1

}


############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   cd ..
   mkdir -p $INSTALL_ROOT/usr/local/share/FlightGear
   mv data $INSTALL_ROOT/usr/local/share/FlightGear || return 1
   chown -R root.root $INSTALL_ROOT/usr/local/share/FlightGear/data

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_install
   tet_split
   tet_create
   tet_generate
   tet_check
   tet_package

}


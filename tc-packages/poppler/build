#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  ./configure --prefix=/usr/local --localstatedir=/var \
              --enable-libjpeg \
              --enable-libopenjpeg \
              --enable-splash-output \
              --disable-gtk-test \
              --enable-cairo-output \
              --enable-xpdf-headers \
              --enable-poppler-qt4 \
              --enable-poppler-glib \
              --without-libiconv-prefix || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  sudo make DESTDIR=${INSTALL_ROOT} install || return 1

  # preserve old libs
  sudo cp -L /usr/local/lib/libpoppler-glib.so.4.0.0 ${INSTALL_ROOT}/usr/local/lib
  sudo ln -s libpoppler-glib.so.4.0.0 ${INSTALL_ROOT}/usr/local/lib/libpoppler-glib.so.4
  sudo cp -L /usr/local/lib/libpoppler.so.5.0.0 ${INSTALL_ROOT}/usr/local/lib
  sudo ln -s libpoppler.so.5.0.0 ${INSTALL_ROOT}/usr/local/lib/libpoppler.so.5

}
##

### Rules
build_rules() {

  buildit download || exit 1
  buildit convert || exit 1
  buildit unpack || exit 1
  buildit patch || exit 1
  buildit load || exit 1
  buildit configure || exit 1
  buildit compile || exit 1
  buildit install || exit 1
  buildit modify || exit 1
  buildit strip || exit 1
  buildit split || exit 1
  buildit create || exit 1
  buildit generate || exit 1
  buildit check || exit 1
  buildit package || exit 1
  buildit compress || exit 1
  buildit encrypt || exit 1

}
##

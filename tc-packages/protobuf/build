#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Configure
build_configure() {

  ./autogen.sh || return 1
  ./configure --prefix=/usr/local --disable-static || return 1

}
##

### Compile
build_compile() {

  make || return 1

}
##

### Install
build_install() {

  sudo make DESTDIR=${INSTALL_ROOT} install || return 1

  cd python
  sudo python setup.py install --prefix=/usr/local --root=${INSTALL_ROOT} || return 1

}
##

### Rules
build_rules() {

  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_load
  tet_configure
  tet_compile
  tet_install
  tet_split
   tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}
##

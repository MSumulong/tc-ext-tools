#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   sed -i "s|/usr/share|/usr/local/share|" linux/plat/resources.py || return 1

}

# Compile
build_compile() {

   cd linux
   python setup.py build || return 1

}

# Install
build_install() {

   cd linux
   python setup.py install --prefix=/usr/local --root="$INSTALL_ROOT" || return 1

   sed -i "s|./miro.real|/usr/local/bin/miro.real|" ${INSTALL_ROOT}/usr/local/bin/miro

   mv "$INSTALL_ROOT/usr/share" "$INSTALL_ROOT/usr/local" || return 1

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

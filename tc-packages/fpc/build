#
# tc-ext-tools build functions: configure, compile, install, rules
#

### Compile
build_compile() {

  make NOGDB=1 build || return 1

}
##

### Install
build_install() {

  make -j1 NOGDB=1 PREFIX=${INSTALL_ROOT}/usr/local install || return 1

  install -m 755 -d ${INSTALL_ROOT}/usr/local/share/doc/${PACKAGE}
  install -m 644 fpcsrc/rtl/COPYING.FPC ${INSTALL_ROOT}/usr/local/share/doc/${PACKAGE}/COPYING || return 1

  ln -sf /usr/local/lib/fpc/${VERSION}/ppc386 ${INSTALL_ROOT}/usr/local/bin/ || return 1

  mkdir -p ${INSTALL_ROOT}/etc
  ${INSTALL_ROOT}/usr/local/lib/fpc/${VERSION}/samplecfg /usr/local/lib/fpc/${VERSION} ${INSTALL_ROOT}/etc || return 1

  mv $INSTALL_ROOT/usr/local/man $INSTALL_ROOT/usr/local/share/ || return 1

}
##

### Rules
build_rules() {

  buildit load || exit 1
  buildit download || exit 1
  buildit convert || exit 1
  buildit unpack || exit 1
  buildit patch || exit 1
  buildit compile || exit 1
  buildit install || exit 1
  buildit split || exit 1
  buildit strip || exit 1
  buildit create || exit 1
  buildit generate || exit 1
  buildit check || exit 1
  buildit package || exit 1

}
##

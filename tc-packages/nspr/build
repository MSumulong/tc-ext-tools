#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

  cd mozilla/nsprpub
  ./configure --prefix=/usr/local \
     --with-mozilla --with-pthreads \
     --enable-optimize --disable-debug || return 1

}

# Compile
build_compile() {

  cd mozilla/nsprpub
  make || return 1

}

# Install
build_install() {

  cd mozilla/nsprpub
  make DESTDIR="$INSTALL_ROOT" install || return 1

}

# Rules
build_rules() {

  tet_load
  tet_download
  tet_convert
  tet_unpack
  tet_patch
  tet_configure
  tet_compile
  tet_install
  tet_split
   tet_strip
  tet_create
  tet_generate
  tet_check
  tet_package

}


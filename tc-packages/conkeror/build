#
# tc-ext-tools build functions: configure, compile, install, rules
#

build_configure() {

  return 0

}

build_compile() {

  make || return 1

}

build_install() {

  install -m 755 -d "$INSTALL_ROOT"/usr/local/bin
  install -m 755 -d "$INSTALL_ROOT"/usr/local/conkeror/contrib
  install -m 755 -d "$INSTALL_ROOT"/usr/local/share/man/man1
  install -m 755 -d "$INSTALL_ROOT"/usr/local/share/pixmaps
  install -m 755 -d "$INSTALL_ROOT"/usr/local/share/applications

  install -m 644 "$PACKAGE_SRC"/conkeror.png "$INSTALL_ROOT"/usr/local/share/pixmaps || return 1
  install -m 644 "$PACKAGE_SRC"/conkeror.desktop "$INSTALL_ROOT"/usr/local/share/applications || return 1
  install -m 755 "$PACKAGE_SRC"/conkeror.sh "$INSTALL_ROOT"/usr/local/bin/conkeror || return 1

  cp -r branding chrome components content defaults locale modules search-engines help style "$INSTALL_ROOT"/usr/local/conkeror/ || return 1
  cp -r contrib/xrev contrib/config contrib/modules "$INSTALL_ROOT"/usr/local/conkeror/contrib/ || return 1
  cp -p conkeror-spawn-helper "$INSTALL_ROOT"/usr/local/conkeror/ || return 1
  cp -p application.ini "$INSTALL_ROOT"/usr/local/conkeror/application.ini || return 1
  cp -p contrib/man/conkeror.1 "$INSTALL_ROOT"/usr/local/share/man/man1 || return 1
  cp -p contrib/list-xulrunner-versions "$INSTALL_ROOT"/usr/local/conkeror/contrib || return 1
  cp -p contrib/run-conkeror "$INSTALL_ROOT"/usr/local/conkeror/contrib || return 1

  ln -s /usr/local/conkeror/conkeror-spawn-helper "$INSTALL_ROOT"/usr/local/bin/conkeror-spawn-helper || return 1
  ln -s /usr/local/lib/xulrunner-addons/plugins "$INSTALL_ROOT"/usr/local/conkeror/plugins || return 1
  ln -s /usr/local/lib/xulrunner-addons/extensions "$INSTALL_ROOT"/usr/local/conkeror/extensions || return 1

}

build_rules() {

  buildit load || exit 1
  buildit download || exit 1
  buildit convert || exit 1
  buildit unpack || exit 1
  buildit patch || exit 1
  buildit configure || exit 1
  buildit compile || exit 1
  buildit install || exit 1
  buildit split || exit 1
   buildit strip || exit 1
  buildit create || exit 1
  buildit generate || exit 1
  buildit check || exit 1
  buildit package || exit 1
  buildit compress || exit 1

}

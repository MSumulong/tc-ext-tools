#
# tc-ext-tools build functions: configure, compile, install, rules
#

# Configure
build_configure() {

   mkdir build
   cd build
   cmake -DCMAKE_INSTALL_PREFIX=/usr/local \
       -DBUILD_SHARED_LIBS=1 \
       -DBUILD_DEMOS=0 \
       -DBUILD_EXTRAS=0 \
       -DINSTALL_LIBS=1 \
       -DINSTALL_EXTRA_LIBS=1 \
       -DCMAKE_BUILD_TYPE=Release .. || return 1

}

# Compile
build_compile() {

   cd build
   make || return 1

   cd ..
   doxygen

}

# Install
build_install() {

   cd build
   make DESTDIR="$INSTALL_ROOT" install || return 1

   install -Dm644 "$PACKAGE_SRC"/bullet.pc "$INSTALL_ROOT"/usr/local/lib/pkgconfig/bullet.pc

   cd ..
   install -Dm644 Bullet_User_Manual.pdf "$INSTALL_ROOT"/usr/local/share/doc/bullet/Bullet_User_Manual.pdf
   cp -r html "$INSTALL_ROOT"/usr/local/share/doc/bullet/html

}

# Rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_configure
   tet_compile
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}

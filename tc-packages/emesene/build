
############################################################################
#                                                                          #
#    package build functions: configure, compile, install, rules, etc.     #
#                                                                          #
############################################################################

## install
build_install() {

   python setup.py install --prefix=/usr/local --root="$I_ROOT" || return 1

   mv -f "$I_ROOT/usr/local/lib/python2.7/site-packages" "$I_ROOT/usr/local/share/emesene"
   rm -rf "$I_ROOT/usr/local/lib"
   mv -f "$I_ROOT/usr/local/share/emesene/emesene/po" "$I_ROOT/usr/local/share/locale"
   install -Dm755 "$P_SRC/emesene.sh" "$I_ROOT/usr/local/bin/emesene"

}

## rules
build_rules() {

   tet_load
   tet_download
   tet_convert
   tet_unpack
   tet_patch
   tet_install
   tet_split
   tet_strip
   tet_create
   tet_generate
   tet_check
   tet_package

}


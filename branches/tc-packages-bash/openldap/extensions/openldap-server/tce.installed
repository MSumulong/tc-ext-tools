#!/bin/sh

EXTENSION=$(basename $0)
PREFIX=/usr/local

if [ -d /tmp/tcloop/${EXTENSION} ]; then
     rm -f ${PREFIX}/libexec/slapd
     rm -f ${PREFIX}/sbin/slap*
     cp -Pr /tmp/tcloop/${EXTENSION}/${PREFIX}/sbin ${PREFIX}
     cp /tmp/tcloop/${EXTENSION}/${PREFIX}/libexec/slapd ${PREFIX}/libexec/slapd
fi

[ -d /usr/local/etc/openldap/slapd.d ] || mkdir -p /usr/local/etc/openldap/slapd.d
[ -d /var/lib/openldap/run ] || mkdir -p /var/lib/openldap/run


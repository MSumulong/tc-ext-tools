
############################################################################
#                                                                          #
#  tc-ext-tools build functions: configure, compile, install, rules, etc.  #
#                                                                          #
############################################################################

############################################################################ 
#                            Configure                                     #
############################################################################

build_configure() {

    echo "Categories=Game;KidsGame;Graphics;RasterGraphics;" >> src/tuxpaint.desktop || return 1

}

############################################################################ 
#                              Compile                                     #
############################################################################

build_compile() {

   make || return 1

}

############################################################################ 
#                              Install                                     #
############################################################################

build_install() {

   make DESTDIR="$INSTALL_ROOT" MAN_PREFIX=$INSTALL_ROOT/usr/local/share/man \
        X11_ICON_PREFIX=$INSTALL_ROOT/usr/local/share/pixmaps  install || return 1

   install -D -m 644 src/tuxpaint.desktop $INSTALL_ROOT/usr/local/share/applications/tuxpaint.desktop

}

############################################################################ 
#                                Rules                                     #
############################################################################

build_rules() {

   buildit load || exit 1
   buildit download || exit 1
   buildit convert || exit 1
   buildit unpack || exit 1
   buildit patch || exit 1
   buildit configure || exit 1
   buildit compile || exit 1
   buildit install || exit 1
   buildit split || exit 1
   buildit strip || exit 1
   buildit create || exit 1
   buildit generate || exit 1
   buildit check || exit 1
   buildit package || exit 1

}


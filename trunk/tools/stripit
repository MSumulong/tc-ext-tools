. /etc/init.d/tc-functions

TCEXTTOOLS_ROOT="$(dirname $0)/.."

if [ -f "$TCEXTTOOLS_ROOT/etc/tc-ext-tools/functions" ]; then
     . "$TCEXTTOOLS_ROOT/etc/tc-ext-tools/functions"
else
     echo "${RED}$(basename $0):${BLUE} tc-ext-tools functions file not found!${NORMAL}"
     exit 1
fi

this_strip() {

   echo "Getting the package extension executables list."
   EXECUTABLE_LIST=$(sudo find "$PACKAGE_EXTENSION_BIN" -not -type d -exec file "{}" \; | grep "executable" | grep ELF | grep "not stripped" | cut -f1 -d:)

   echo "Getting the package extension shared objects list."
   SHARED_OBJECT_LIST=$(sudo find "$PACKAGE_EXTENSION_BIN" -not -type d -exec file "{}" \; | grep "shared object" | grep ELF | grep "not stripped" | cut -f1 -d:)

   echo "Processing the package extension executables list."
   if [ -n "$EXECUTABLE_LIST" ]; then
        for EXECUTABLE in $EXECUTABLE_LIST
        do
            echo "Stripping the package extension executable ${EXECUTABLE#$PACKAGE_EXTENSION_BIN}" 
            sudo strip --strip-unneeded "$EXECUTABLE" || return 1
        done
   fi

   echo "Processing the package extension shared objects list."
   if [ -n "$SHARED_OBJECT_LIST" ]; then
        for SHARED_OBJECT in $SHARED_OBJECT_LIST
        do
            echo "Stripping the package extension shared object ${SHARED_OBJECT#$PACKAGE_EXTENSION_BIN}" 
            sudo strip -g "$SHARED_OBJECT" || return 1
        done
   fi

   return 0

}

this_main() {

   echo "---------------------------------------------------------------"
   echo ""
   echo "Stripping the package $PACKAGE extensions ..."
   echo ""
   echo "---------------------------------------------------------------"

   for EXTENSION in $EXTENSIONS
   do
       set_extension

       echo "---------------------------------------------------------------"
       echo "Stripping the package extension $PACKAGE_EXTENSION_NAME"
       echo "---------------------------------------------------------------"

       echo -e "Checking if the package extension is splitted before ... \c"
       if [ -d "$PACKAGE_EXTENSION_BIN" ]; then
            echo "yes"
       else
            echo "no"
            echo "---------------------------------------------------------------"
            echo "Error! You must split it first."
            echo "---------------------------------------------------------------"
            return 1
       fi

       this_strip
       if [ "$?" -gt 0 ]; then
            echo "---------------------------------------------------------------"
            echo "Error! Stripping the package extension $PACKAGE_EXTENSION_NAME failed."
            echo "---------------------------------------------------------------"
            sudo rm -rf "$TMP_DIR"
            return 1
       else
            echo "---------------------------------------------------------------"
            echo "Stripping the package extension $PACKAGE_EXTENSION_NAME successful."
            echo "---------------------------------------------------------------"
       fi
   done

   echo "---------------------------------------------------------------"
   echo ""
   echo "Stripped the package $PACKAGE extensions successfully."
   echo ""
   echo "---------------------------------------------------------------"

   return 0

}

echo -e "${MESSAGE_COLOR}Stripping the package ${HILIGHT_COLOR}$PACKAGE${MESSAGE_COLOR} extensions ... ${NORMAL}\c"
this_main > "$PACKAGE_MESSAGE_LOG" 2>&1
if [ "$?" -gt 0 ]; then
     echo "${ERROR_COLOR}failed!${NORMAL}"
     echo "${WARNING_COLOR}For details: ${WARNING_COLOR_H}buildit print message${NORMAL}"
     exit 1
fi
echo "${HILIGHT_COLOR}successful!${NORMAL}"

exit 0


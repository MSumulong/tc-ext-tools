. /etc/init.d/tc-functions

TCEXTTOOLS_ROOT="$(dirname $0)/.."

if [ -f "$TCEXTTOOLS_ROOT/etc/tc-ext-tools/functions" ]; then
     . "$TCEXTTOOLS_ROOT/etc/tc-ext-tools/functions"
else
     echo "${RED}$(basename $0):${BLUE} tc-ext-tools functions file not found!${NORMAL}"
     exit 1
fi

############################################################################ 
#                                this main                                 #
############################################################################

this_main() {

   [ -d "$TCEXTTOOLS_PACKAGE" ] && sudo rm -rf "$TCEXTTOOLS_PACKAGE"
   mkdir -p "$TCEXTTOOLS_PACKAGE"

   cd "$PACKAGE_ROOT"

   for EXTENSION in $EXTENSIONS
   do
       . "$PACKAGE_COMMON"

       set_extension_name

       if [ ! -d "$TCEXTTOOLS_PKG/$EXTENSION_NAME" ]; then
              print_it error "You must create it first!"
              exit 1
       fi

       [ -d "$TCEXTTOOLS_PACKAGE/$EXTENSION_NAME" ] || mkdir -p "$TCEXTTOOLS_PACKAGE/$EXTENSION_NAME"

       busybox cp -f "$TCEXTTOOLS_PKG/$EXTENSION_NAME"/*.tcz* "$TCEXTTOOLS_PACKAGE/$EXTENSION_NAME" || return 1
   done

   if [ -e "$TCEXTTOOLS_CONVERTED_SOURCE" ]; then
        busybox cp -f "$TCEXTTOOLS_CONVERTED_SOURCE" "$TCEXTTOOLS_PACKAGE" || return 1
   elif [ -e "$TCEXTTOOLS_SOURCE" ]; then
        busybox cp -f "$TCEXTTOOLS_SOURCE" "$TCEXTTOOLS_PACKAGE" || return 1
   fi

   return 0

}

print_it "Packaging the package $PACKAGE ... \c"
this_main > "$TCEXTTOOLS_ERROR_LOG_2" 2>&1
if [ "$?" -gt 0 ]; then
     print_it error "failed!"
     exit 1
fi
print_it hilight "successful!"

exit 0


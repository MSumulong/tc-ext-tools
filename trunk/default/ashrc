if [ -f "$HOME/.config/tc-ext-tools.conf" ]; then
     . "$HOME/.config/tc-ext-tools.conf"
     export TCEXTTOOLS_PACKAGES TCEXTTOOLS_STORAGE TCEXTTOOLS_PACKAGES_DATABASE
fi

# tc-ext-tools cd: change directory to package root
tetcd() {

   if [ -z "$1" ]; then
        cd "$TCEXTTOOLS_PACKAGES"
        return 0
   fi

   PACKAGE="$1"

   if [ -f "$HOME/.local/share/tc-ext-tools/packages_db/$PACKAGE" ]; then
        . "$HOME/.local/share/tc-ext-tools/packages_db/$PACKAGE"
   else
        echo "tetcd: No such package $PACKAGE"
        return 1
   fi

   if [ -d "$PACKAGE_ROOT" ]; then
        cd "$PACKAGE_ROOT"
        return 0
   else
        echo "tetcd: Package $PACKAGE root not found"
        return 1
   fi

}

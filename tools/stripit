. /etc/init.d/tc-functions

TCEXTTOOLS_ROOT="$(dirname $0)/.."

if [ -f "$TCEXTTOOLS_ROOT/etc/init.d/tc-ext-tools.sh" ]; then
     . "$TCEXTTOOLS_ROOT/etc/init.d/tc-ext-tools.sh"
else
     echo "${RED}$(basename $0):${BLUE} tc-ext-tools functions file not found!${NORMAL}"
     exit 1
fi

this_strip() {

   echo "Getting the extension executables list."
   EXECUTABLE_LIST=$(sudo find "$PACKAGE_EXTENSION_BIN" -not -type d -exec file "{}" \; | grep "executable" | grep ELF | grep "not stripped" | cut -f1 -d:)

   echo "Getting the extension shared objects list."
   SHARED_OBJECT_LIST=$(sudo find "$PACKAGE_EXTENSION_BIN" -not -type d -exec file "{}" \; | grep "shared object" | grep ELF | grep "not stripped" | cut -f1 -d:)

   echo "Processing the extension executables list."
   if [ -n "$EXECUTABLE_LIST" ]; then
        for EXECUTABLE in $EXECUTABLE_LIST
        do
            echo "Stripping the executable $EXECUTABLE" 
            sudo strip --strip-unneeded "$EXECUTABLE" || return 1
        done
   fi

   echo "Processing the extension shared objects list."
   if [ -n "$SHARED_OBJECT_LIST" ]; then
        for SHARED_OBJECT in $SHARED_OBJECT_LIST
        do
            echo "Stripping the shared object $SHARED_OBJECT" 
            sudo strip -g "$SHARED_OBJECT" || return 1
        done
   fi

   return 0

}

this_main() {

   echo ""
   echo "Stripping the package $PACKAGE extensions ..."
   for EXTENSION in $EXTENSIONS
   do
       set_extension

       echo "Checking if the extension is splitted before."
       if [ ! -d "$PACKAGE_EXTENSION_BIN" ]; then
              echo "Error! You must split the package extensions first."
              return 1
       fi

       echo "Stripping the extension $PACKAGE_EXTENSION_NAME."
       this_strip
       if [ "$?" -gt 0 ]; then
            echo "Error! Stripping the extension $PACKAGE_EXTENSION_NAME failed."
            sudo rm -rf "$TMP_DIR"
            return 1
       else
            echo "Stripping the extension $PACKAGE_EXTENSION_NAME successful."
       fi
   done

   echo ""
   echo "Stripped the package $PACKAGE extensions successfully."

   return 0

}

print_it "Stripping the package $PACKAGE extensions ... \c"
this_main > "$PACKAGE_MESSAGE_LOG_2" 2>&1
if [ "$?" -gt 0 ]; then
     print_it error "failed!"
     exit 1
fi
print_it hilight "successful!"

exit 0

